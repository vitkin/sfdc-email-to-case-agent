<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC '-//APACHE//DTD LOG4J 1.2//EN' 'http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd'>
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    
    <!-- Appenders configuration -->
    
    <!-- CONSOLE is set to be a ConsoleAppender using a PatternLayout. -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param  name="Threshold" value="INFO"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p %m%n"/>
        </layout>
    </appender>
    
    <!-- LOGFILE is set to be a File appender using a PatternLayout. -->
    <appender name="LOGFILE" class="org.apache.log4j.RollingFileAppender">
        <param name="Append" value="true"/>
        <param name="File" value="log/SalesforceAgent.log"/>
        <param name="maxFileSize" value="10MB"/>
        <param name="Threshold" value="DEBUG"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-4r [%t] %-5p %c %x - %m%n"/>
        </layout>
    </appender>
    
    <!-- JAVA_MAIL_TRACE_FILE is set to be a File appender using a PatternLayout. -->
    <appender name="JAVA_MAIL_TRACE_FILE" class="org.apache.log4j.FileAppender">
        <param name="Append" value="true"/>
        <param name="File" value="log/java-mail-trace.log"/>
        <param name="Threshold" value="DEBUG"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-4r [%t] %-5p %c %x - %m%n"/>
        </layout>
    </appender>
    
    <!-- PARTNER_SOAP_TRACE_FILE is set to be a File appender using a PatternLayout. -->
    <appender name="PARTNER_SOAP_TRACE_FILE" class="org.apache.log4j.FileAppender">
        <param name="Append" value="true"/>
        <param name="File" value="log/partner-soap-trace.log"/>
        <param name="Threshold" value="DEBUG"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n"/>
        </layout>
    </appender>
    
    <!-- Loggers configuration -->
	
    <!-- JAVA_MAIL_TRACE_FILE -->
    <!-- uncomment this to turn on javamail logging -->
    <!--
    <logger name="javax.mail" additivity="false">
        <level value="debug"/>
        <appender-ref ref="JAVA_MAIL_TRACE_FILE"/>
    </logger>
    -->
    
    <!-- PARTNER_SOAP_TRACE_FILE -->
    <!-- uncomment this to turn on soap api perf logging -->
    <!--
    <logger name="com.sforce.soap.partner" additivity="false">
        <level value="debug"/>
        <appender-ref ref="PARTNER_SOAP_TRACE_FILE"/>
    </logger>
    -->
    
    <!-- Root configuration -->
    <!-- Set root category priority to INFO and its appenders to CONSOLE and LOGFILE. -->
    <root>
        <level value="info"/>
        <!--<appender-ref ref="CONSOLE"/>-->
        <appender-ref ref="LOGFILE"/>
    </root>
    
</log4j:configuration>